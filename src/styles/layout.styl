@require './vars'

*
  margin: 0
  padding: 0
  
  // 禁用选中
  -webkit-touch-callout:none;
  -webkit-user-select:none;
  -khtml-user-select:none;
  -moz-user-select:none;
  -ms-user-select:none;
  user-select:none;

html
  font: global-font
  box-sizing: border-box
  min-height: 100%

ul li
  list-style: none

a
  text-decoration: none
  
h1
  font-weight: normal
  
// 留出导航和购物车的位置  
body
  padding-top: 122px
  padding-bottom: 44px

header
  position: fixed
  top: 0
  z-index: 9
  
  width: 100%
  height: 122px
  background: #fff
  


  